{
  "name": "@officer-election/server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx src/db/migrate.ts && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/db/migrate.js && node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "dependencies": {
    "@officer-election/shared": "workspace:*",
    "@trpc/server": "^10.45.2",
    "better-sqlite3": "^11.5.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.36.1",
    "express": "^4.21.1",
    "nanoid": "^5.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/qs": "^6.9.0",
    "@types/node": "^22.9.0",
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
